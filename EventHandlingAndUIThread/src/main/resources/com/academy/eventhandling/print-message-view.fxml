<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.academy.eventhandling.PrintMessageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Label fx:id="threadText" />
    <TextField fx:id="nameField" onKeyReleased="#onKeyRelease" />
    <HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">
        <Button fx:id="welcomeButton" text="Welcome" onAction="#onButtonClick"/>
        <Button fx:id="farewellButton" text="Farewell" onAction="#onButtonClick"/>
    </HBox>
    <CheckBox fx:id="clearCheckBox" text="Clear the field after saying hello or bye."
              onAction="#onCheckBoxChange" />
    <Button fx:id="anonymousActBtn" text="Anonymous Action" />
</VBox>
